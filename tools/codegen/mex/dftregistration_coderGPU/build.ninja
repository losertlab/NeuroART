# CompilerName=msvcpp150
# Mode=optim
ninja_required_version = 1.3

# Basic folders
root = .
builddir = $root\build\win64
matlabdir = C:\Program Files\MATLAB\R2019b
startdir = C:\Users\Losert Lab\Desktop\RTapp_v12\utilities

# Toolchain information
cc = cl
cxx = cl
linker = link
linkerxx = link

cflags =  /c /Zp8 /GR /W3 /EHs /nologo /MD /D_CRT_SECURE_NO_DEPRECATE /D_SCL_SECURE_NO_DEPRECATE /D_SECURE_SCL=0   /DMATLAB_MEX_FILE  /DMATLAB_MEX_FILE /O2 /Oy- /DNDEBUG /fp:strict /I "$root" /I "$startdir" /I "$root\interface" /I "$matlabdir\extern\include" /I "$matlabdir\simulink\include" /I "$matlabdir\rtw\c\src" /I "$matlabdir\rtw\c\src\ext_mode\common" /I "$matlabdir\rtw\c\ert" /I "." -DMW_CUDA_ARCH=520 -DMODEL=dftregistration_coderGPU_mex -DHAVESTDIO -DUSE_RTMODEL -DMW_NEEDS_VERSION_H  

cxxflags =   /c /Zp8 /GR /W3 /EHs /nologo /MD /D_CRT_SECURE_NO_DEPRECATE /D_SCL_SECURE_NO_DEPRECATE /D_SECURE_SCL=0   /DMATLAB_MEX_FILE  /DMATLAB_MEX_FILE /O2 /Oy- /DNDEBUG /fp:strict /I "$root" /I "$startdir" /I "$root\interface" /I "$matlabdir\extern\include" /I "$matlabdir\simulink\include" /I "$matlabdir\rtw\c\src" /I "$matlabdir\rtw\c\src\ext_mode\common" /I "$matlabdir\rtw\c\ert" /I "." -DMW_CUDA_ARCH=520 -DMODEL=dftregistration_coderGPU_mex -DHAVESTDIO -DUSE_RTMODEL -DMW_NEEDS_VERSION_H  

ldflags =  -Xlinker  /nologo -Xlinker  /manifest   -Xlinker  /DLL -L"$matlabdir\extern\lib\win64\microsoft" libmx.lib libmex.lib libmat.lib kernel32.lib user32.lib gdi32.lib winspool.lib comdlg32.lib advapi32.lib shell32.lib ole32.lib oleaut32.lib uuid.lib odbc32.lib odbccp32.lib libMatlabDataArray.lib libMatlabEngine.lib   libemlrt.lib libcovrt.lib libut.lib libmwmathutil.lib -arch sm_52  -L"C:\Program Files\NVIDIA GPU Computing Toolkit\CUDA\v10.1\lib\x64" cudart.lib cublas.lib cusolver.lib cufft.lib cuda.lib -Xnvlink -w  -Wno-deprecated-gpu-targets -Xlinker /NODEFAULTLIB:libcmt.lib

# Build Rules
rule cc
    command = $cc $cflags $in /Fo$out

rule cxx
    command = $cxx $cxxflags $in /Fo$out

rule link
    command = $linker @$out.rsp $ldflags
    rspfile = $out.rsp
    rspfile_content = $in

rule linkxx
    command = $linkerxx $in $ldflags

cudac = nvcc
linkercuda = nvcc

cudaflags =  -c -rdc=true -Xcompiler "/wd 4819" -Xcompiler "/MD" -Xcudafe "--display_error_number --diag_suppress=2381 --diag_suppress=unsigned_compare_with_zero --diag_suppress=useless_type_qualifier_on_return_type" -D_GNU_SOURCE -DMATLAB_MEX_FILE -I "$root" -I "$startdir" -I "$root\interface" -I "$matlabdir\extern\include" -I "$matlabdir\simulink\include" -I "$matlabdir\rtw\c\src" -I "$matlabdir\rtw\c\src\ext_mode\common" -I "$matlabdir\rtw\c\ert" -I "." -DMW_CUDA_ARCH=520 -DMODEL=dftregistration_coderGPU_mex -DHAVESTDIO -DUSE_RTMODEL -DMW_NEEDS_VERSION_H  -arch sm_52  -I "$matlabdir/simulink/include" -I "$matlabdir/toolbox/shared/simtargets"
rule cudac
    command = $cudac $cudaflags $in -o $out

rule linkcuda
    command = $linkercuda $ldflags -o $out $in

# Build
build $builddir\rt_nonfinite.obj : cudac $root\rt_nonfinite.cpp
build $builddir\dftregistration_coderGPU_data.obj : cudac $root\dftregistration_coderGPU_data.cu
build $builddir\dftregistration_coderGPU_initialize.obj : cudac $root\dftregistration_coderGPU_initialize.cu
build $builddir\dftregistration_coderGPU_terminate.obj : cudac $root\dftregistration_coderGPU_terminate.cu
build $builddir\dftregistration_coderGPU.obj : cudac $root\dftregistration_coderGPU.cu
build $builddir\_coder_dftregistration_coderGPU_api.obj : cudac $root\interface\_coder_dftregistration_coderGPU_api.cu
build $builddir\_coder_dftregistration_coderGPU_mex.obj : cudac $root\interface\_coder_dftregistration_coderGPU_mex.cu
build $builddir\dftregistration_coderGPU_emxutil.obj : cudac $root\dftregistration_coderGPU_emxutil.cu
build $builddir\_coder_dftregistration_coderGPU_info.obj : cudac $root\interface\_coder_dftregistration_coderGPU_info.cu
build $builddir\MWCudaDimUtility.obj : cudac $root\MWCudaDimUtility.cu
build $builddir\MWLaunchParametersUtilities.obj : cudac $root\MWLaunchParametersUtilities.cu
build $builddir\cpp_mexapi_version.obj : cudac $root\cpp_mexapi_version.cpp

# Link
build $root\dftregistration_coderGPU_mex.mexw64 : linkcuda $builddir\rt_nonfinite.obj $builddir\dftregistration_coderGPU_data.obj $builddir\dftregistration_coderGPU_initialize.obj $builddir\dftregistration_coderGPU_terminate.obj $builddir\dftregistration_coderGPU.obj $builddir\_coder_dftregistration_coderGPU_api.obj $builddir\_coder_dftregistration_coderGPU_mex.obj $builddir\dftregistration_coderGPU_emxutil.obj $builddir\_coder_dftregistration_coderGPU_info.obj $builddir\MWCudaDimUtility.obj $builddir\MWLaunchParametersUtilities.obj $builddir\cpp_mexapi_version.obj 
